{
  "name": "githorn",
  "version": "0.1.0",
  "description": "An app for managing GitHub pull requests",
  "main": "index.js",
  "scripts": {
    "dev-server": "webpack-dev-server --config ./webpack.config.js --mode development",
    "dev": "concurrently \"onchange ./src/css/*.css -- yarn minify-css\" \"yarn dev-server\"",
    "minify-css": "cat ./src/css/styles.css | uglifycss > ./dist/styles.css",
    "release": "webpack --config ./webpack.prod.js --mode production",
    "test": "echo \"No test specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/githorn.git"
  },
  "keywords": [
    "github",
    "pull",
    "requests",
    "managing"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/githorn/issues"
  },
  "homepage": "https://github.com/krasimir/githorn#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "react-hot-loader": "^4.3.11",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "uglifyjs-webpack-plugin": "2.1.1",
    "uglifycss": "0.0.29",
    "onchange": "5.2.0",
    "concurrently": "4.0.1"
  },
  "dependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  }
}
