{
  "name": "githorn",
  "version": "0.1.0",
  "description": "An app for managing GitHub pull requests",
  "main": "index.js",
  "scripts": {
    "dev-server": "webpack-dev-server --config ./webpack.config.js --mode development",
    "dev": "yarn minify-css && concurrently \"onchange ./src/css/*.css -- yarn minify-css\" \"yarn dev-server\"",
    "minify-css": "cat ./src/css/diff2html.min.css ./src/css/custom.diff2html.min.css ./src/css/github.markdown.css ./src/css/styles_generic.css ./src/css/styles.css | uglifycss > ./dist/styles.css",
    "release": "webpack --config ./webpack.prod.js --mode production",
    "lint": "./node_modules/.bin/eslint --ext .js src",
    "test": "./node_modules/.bin/jest",
    "test-watch": "./node_modules/.bin/jest --watch --verbose false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/githorn.git"
  },
  "keywords": [
    "github",
    "pull",
    "requests",
    "managing"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/githorn/issues"
  },
  "homepage": "https://github.com/krasimir/githorn#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-regenerator": "7.0.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "7.3.1",
    "babel-eslint": "8.0.3",
    "babel-jest": "24.1.0",
    "babel-loader": "^8.0.4",
    "concurrently": "4.0.1",
    "dexie": "2.0.4",
    "diff2html": "2.7.0",
    "eslint": "4.12.1",
    "eslint-plugin-react": "7.12.4",
    "gitdiff-parser": "0.1.2",
    "jest": "24.1.0",
    "markdown-it": "8.4.2",
    "markdown-it-mentions": "1.0.0",
    "onchange": "5.2.0",
    "prop-types": "15.7.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.11",
    "react-router-dom": "4.3.1",
    "react-testing-library": "6.0.0",
    "sha-regex": "1.0.4",
    "terser-webpack-plugin": "1.2.3",
    "uglifycss": "0.0.29",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
